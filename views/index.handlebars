<div class="container mt-3">
  <div class="row justify-content-between">
    <nav class="navbar navbar-white bg-white col-5">
      <form class="form-inline" action="/search">
        <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
          value="{{keyword}}" aria-describedby="search-button">
      </form>
    </nav>
    <div class="selectMenu col-3 p-auto">
      <form action="/sort" method="GET">
        <select name="sort" class="form-control btn-outline-secondary" id='inputType' onchange="this.form.submit()"
          style="cursor: pointer; text-align: center; text-align-last: center">
          <option disabled selected>排列順序</option>
          <option class="dropdown-item" value="name" {{#if (equal 'name')}} selected {{/if}}>店名：順序</option>
          <option class="dropdown-item" value="-name" {{#if (equal '-name')}} selected {{/if}}>店名：倒序</option>
          <option class="dropdown-item" value="category" {{#if (equal 'category')}} selected {{/if}}>類別：順序</option>
          <option class="dropdown-item" value="-category" {{#if (equal '-category')}} selected {{/if}}>類別：倒序</option>
          <option class="dropdown-item" value="rating" {{#if (equal 'rating')}} selected {{/if}}>評分：順序</option>
          <option class="dropdown-item" value="-rating" {{#if (equal '-rating')}} selected {{/if}}>評分：倒序</option>
        </select>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-2">
  <div class="row">
    <div class="col-md-12 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-2">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div class="card-footer p-1">
                  <form action="/restaurants/{{ this._id }}?_method=PUT" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-success btn-sm">Edit</button></form>
                  <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button></form>
                </div>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>